@model UserData
@{
    ViewBag.Title = "Data Collection Page";
}
<div class="col-sm-6 mx-auto mt-5 card">
    <div class="card-header bg-dark text-white">
        BMR Calculator
    </div>
    <form asp-action="Index" asp-controller="Bmrui">
        <div class="card-body">
            <div class="row mt-2 mb-2">
                <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Gender" class="form-control">
                </div>
            </div>
            <div class="row mt-2 mb-2">
                <label asp-for="Height" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Height" class="form-control" value="">
                </div>
            </div>
            <div class="row mt-2 mb-2">
                <label asp-for="Weight" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Weight" class="form-control" value="">
                </div>
            </div>
            <div class="row mt-2 mb-2">
                <label asp-for="Age" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Age" class="form-control" value="">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary float-end">Calculate BMR</button>
        </div>
    </form>
</div>
